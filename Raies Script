local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

local LocalPlayer = game:GetService("Players").LocalPlayer
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- 1. ‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç: ‡πÄ‡∏û‡∏¥‡πà‡∏° WaitForChild ‡πÉ‡∏´‡πâ Remote Event ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏™‡∏ñ‡∏µ‡∏¢‡∏£
local ManagementEvent = ReplicatedStorage:WaitForChild("Remote", 10):WaitForChild("Events", 10):WaitForChild("ManagementEvent", 10) 

local Window = Fluent:CreateWindow({
	Title = "BEERPIG HUB X Raise Animal",
	SubTitle = "Good Script Raight now",
	TabWidth = 160,
	Size = UDim2.fromOffset(500, 350),
	Acrylic = true,
	Theme = "Dark"
})


local BuyTab = Window:AddTab({ Title = "Auto Buy Pet", Icon = "üêæ" }) 
local FeedTab = Window:AddTab({ Title = "Auto Full Feed", Icon = "üçî" }) 
local AFKTab = Window:AddTab({ Title = "Anti AFK", Icon = "üèÉ" })


_G.autoBuy = false
_G.antiAfk = false
_G.autoFeed = false
local animalList = {"Lion","Narwhal","Crocodile","Polar Bear","Gorilla"}


local function buyAnimal(name)
	local args = {
		[1] = "Animal",
		[2] = {["ItemName"] = name}
	}
	
	ReplicatedStorage.Remote.Shop.Buy:FireServer(unpack(args)) 
	print("‡∏ã‡∏∑‡πâ‡∏≠‡∏™‡∏±‡∏ï‡∏ß‡πå:", name)
end

local function fullFeedAllPets()
	-- 2. ‡πÅ‡∏Å‡πâ‡πÑ‡∏Ç: ‡πÉ‡∏ä‡πâ WaitForChild() ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤ GUI ‡∏≠‡∏¢‡πà‡∏≤‡∏á‡πÄ‡∏™‡∏ñ‡∏µ‡∏¢‡∏£
	local Managements = LocalPlayer.PlayerGui:WaitForChild("Managements", 10) 
	if not Managements then print("ERROR: ‡πÑ‡∏°‡πà‡∏û‡∏ö Managements ‡πÉ‡∏ô PlayerGui") return 0 end

	local Frame = Managements:WaitForChild("Frame", 10)
	if not Frame then print("ERROR: ‡πÑ‡∏°‡πà‡∏û‡∏ö Frame ‡∏†‡∏≤‡∏¢‡πÉ‡∏ï‡πâ Managements") return 0 end

	local PetSlotsFrame = Frame:WaitForChild("PetSlots", 10) 
	if not PetSlotsFrame then print("ERROR: ‡πÑ‡∏°‡πà‡∏û‡∏ö PetSlots Frame") return 0 end

	local successCount = 0

	for _, petFrame in ipairs(PetSlotsFrame:GetChildren()) do
		if petFrame:IsA("Frame") and string.find(petFrame.Name, "|") then

			-- ‡∏ï‡∏£‡∏£‡∏Å‡∏∞‡∏™‡πà‡∏ß‡∏ô‡∏ô‡∏µ‡πâ‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á‡πÅ‡∏•‡πâ‡∏ß
			local petArgument = petFrame.Name

			local args = {
				[1] = "FullFeed",
				[2] = petArgument
			}

			ManagementEvent:FireServer(unpack(args))
			successCount = successCount + 1
			task.wait(0.05) -- ‡∏•‡∏î‡∏´‡∏ô‡πà‡∏ß‡∏á‡πÄ‡∏ß‡∏•‡∏≤‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏Ñ‡∏ß‡∏≤‡∏°‡∏£‡∏ß‡∏î‡πÄ‡∏£‡πá‡∏ß
		end
	end
	return successCount
end

local function jump()
	local Character = LocalPlayer.Character
	if Character then
		local Humanoid = Character:FindFirstChildOfClass("Humanoid")
		if Humanoid and Humanoid.Health > 0 then
			Humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
			print("Anti-AFK: ‡∏Å‡∏£‡∏∞‡πÇ‡∏î‡∏î")
		end
	end
end


-- =================================================================================
-- UI Toggles
-- =================================================================================

BuyTab:AddToggle("AutoBuy", {
	Title = "Auto Buy Animals",
	Default = false,
	Description = "‡∏ã‡∏∑‡πâ‡∏≠‡∏™‡∏±‡∏ï‡∏ß‡πå‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥ (Legendary - Rainbow)",
	Callback = function(state)
		_G.autoBuy = state
		if state then
			print("‡πÄ‡∏£‡∏¥‡πà‡∏° Auto Buy ‡πÅ‡∏•‡πâ‡∏ß")
			task.spawn(function()
				while _G.autoBuy do
					for _, animalName in ipairs(animalList) do
						buyAnimal(animalName)
						task.wait(2)
					end
					task.wait(115)
				end
			end)
		else
			print("‡∏´‡∏¢‡∏∏‡∏î Auto Buy ‡πÅ‡∏•‡πâ‡∏ß")
		end
	end
})

FeedTab:AddToggle("AutoFeedToggle", { -- ‡∏¢‡πâ‡∏≤‡∏¢‡πÑ‡∏õ‡∏≠‡∏¢‡∏π‡πà FeedTab
	Title = "Auto Full Feed",
	Default = false,
	Description = "Full Feed ‡∏™‡∏±‡∏ï‡∏ß‡πå‡πÉ‡∏ô‡∏™‡∏ß‡∏ô‡∏ó‡∏∏‡∏Å 5 ‡∏ô‡∏≤‡∏ó‡∏µ",
	Callback = function(state)
		_G.autoFeed = state
		if state then
			print("‡πÄ‡∏£‡∏¥‡πà‡∏° Auto Full Feed ‡πÅ‡∏•‡πâ‡∏ß")
			task.spawn(function()
				while _G.autoFeed do
					local count = fullFeedAllPets()
					print("Auto Full Feed: ‡∏ü‡∏µ‡∏î‡∏™‡∏±‡∏ï‡∏ß‡πå‡πÑ‡∏õ‡πÅ‡∏•‡πâ‡∏ß", count, "‡∏ï‡∏±‡∏ß")
					task.wait(300) -- ‡∏£‡∏≠ 5 ‡∏ô‡∏≤‡∏ó‡∏µ (300 ‡∏ß‡∏¥‡∏ô‡∏≤‡∏ó‡∏µ) ‡∏Å‡πà‡∏≠‡∏ô‡∏ü‡∏µ‡∏î‡∏£‡∏≠‡∏ö‡∏ï‡πà‡∏≠‡πÑ‡∏õ
				end
			end)
		else
			print("‡∏´‡∏¢‡∏∏‡∏î Auto Full Feed ‡πÅ‡∏•‡πâ‡∏ß")
		end
	end
})

AFKTab:AddToggle("AntiAFKToggle",
	Title = "Anti-AFK (‡∏Å‡∏£‡∏∞‡πÇ‡∏î‡∏î)",
	Default = false,
	Description = "‡∏Å‡∏£‡∏∞‡πÇ‡∏î‡∏î‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥‡∏ó‡∏∏‡∏Å 5 ‡∏ô‡∏≤‡∏ó‡∏µ",
	Callback = function(state)
		_G.antiAfk = state
		if state then
			print("‡πÄ‡∏£‡∏¥‡πà‡∏° Anti-AFK ‡πÅ‡∏•‡πâ‡∏ß")
			task.spawn(function()
				while _G.antiAfk do
					jump()
					task.wait(300)
				end
			end)
		else
			print("‡∏´‡∏¢‡∏∏‡∏î Anti-AFK ‡πÅ‡∏•‡πâ‡∏ß")
		end
	end
})
