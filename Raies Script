local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()


local Window = Fluent:CreateWindow({
	Title = "BEERPIG HUB X Raise Animal",
	SubTitle = "Auto Buy Legendary - Rainbow",
	TabWidth = 160,
	Size = UDim2.fromOffset(500, 350),
	Acrylic = true, -- ‡∏ñ‡πâ‡∏≤‡∏≠‡∏¢‡∏≤‡∏Å‡πÉ‡∏´‡πâ‡πÇ‡∏õ‡∏£‡πà‡∏á‡πÉ‡∏™‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÄ‡∏õ‡πá‡∏ô true
	Theme = "Dark"
})


local Tab = Window:AddTab({ Title = "Auto Buy Pet", Icon = "üêæ" })


_G.autoBuy = false
local animalList = {"Lion","Narwhal","Crocodile","Polar Bear","Gorilla"}


local function buyAnimal(name)
	local args = {
		[1] = "Animal",
		[2] = {["ItemName"] = name}
	}
	game:GetService("ReplicatedStorage").Remote.Shop.Buy:FireServer(unpack(args))
	print("‡∏ã‡∏∑‡πâ‡∏≠‡∏™‡∏±‡∏ï‡∏ß‡πå:", name)
end


Tab:AddToggle("AutoBuy", {
	Title = "Auto Buy Animals",
	Default = false,
	Description = "‡∏ã‡∏∑‡πâ‡∏≠‡∏™‡∏±‡∏ï‡∏ß‡πå‡∏≠‡∏±‡∏ï‡πÇ‡∏ô‡∏°‡∏±‡∏ï‡∏¥ (Legendary - Rainbow)",
	Callback = function(state)
		_G.autoBuy = state
		if state then
			print("‡πÄ‡∏£‡∏¥‡πà‡∏° Auto Buy ‡πÅ‡∏•‡πâ‡∏ß")
			task.spawn(function()
				while _G.autoBuy do
					for _, animalName in ipairs(animalList) do
						buyAnimal(animalName)
						task.wait(2)
					end
					task.wait(115)
				end
			end)
		else
			print("‡∏´‡∏¢‡∏∏‡∏î Auto Buy ‡πÅ‡∏•‡πâ‡∏ß")
		end
	end
})
